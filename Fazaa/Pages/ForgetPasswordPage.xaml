<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:Fazaa;assembly=Fazaa"
		x:Class="Fazaa.ForgetPasswordPage"
		BackgroundImage="bg">
	<ScrollView 
			IsClippedToBounds="true"
			>
	<StackLayout 
			Orientation="Vertical"
			HorizontalOptions="FillAndExpand"
			VerticalOptions="Start"
			Margin="0,20,0,0"
			Spacing="0"
			Padding="30">
		<Image Source="logo"/>
			<Label
				Text="Driver Login"
				TextColor="White"
				HorizontalOptions="Center"
				Margin="0,10,0,0"
				FontSize="25"
				FontAttributes="Bold"/>
			<Frame
					Margin="0,50,0,0"
					Padding="0"
					>
				<StackLayout>
				<local:MyEntry 
					Placeholder="Email Address"
					HorizontalOptions="FillAndExpand"
					HeightRequest="40"
					FontSize="14"
					Keyboard="Email"
						x:Name="txtEmail"/>
					
					</StackLayout>
			</Frame>
		

			
			<StackLayout
			Margin="0,10,0,0"
			Orientation="Horizontal"
					HorizontalOptions="FillAndExpand"
			Spacing="10">

						<Button
			Text="Submit"
			TextColor="White"
		    x:Name="btnSumit"
			BackgroundColor="#292828" 
			HorizontalOptions="FillAndExpand"
			VerticalOptions="Center"
			FontSize="20"
			FontAttributes="Bold"
			Margin="0,10,0,0"
					HeightRequest="50"/>
						
						</StackLayout>
			
			</StackLayout>
		</ScrollView>
</ContentPage>
